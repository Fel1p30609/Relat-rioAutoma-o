    <script>
        const fileInput = document.getElementById('reportFile');
        const reportWrapper = document.getElementById('report-wrapper');
        const mainContent = document.querySelector('.main-content');
        const formatCurrency = (value) => value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

        const ALL_ROBOTS = [
            { name: 'ATRION WIN', margem: 'Margem 50k: 5 contratos WDO', logoUrl: 'https://i.ibb.co/Gfn4rkTx/ATRION-WIN.png' },
            { name: 'ATRION WDO', margem: 'Margem 50k: 10 contratos WIN', logoUrl: 'https://i.ibb.co/Gfn4rkTx/ATRION-WIN.png' }, // Logomarca pode ser a mesma se for o caso
            { name: 'CRONOS WDO', margem: 'Margem 50k: 5 contratos WDO', logoUrl: 'https://i.ibb.co/ynrKMFFj/CRONOS.png' },
            { name: 'ORION WIN', margem: 'Margem 50k: 10 contratos WIN', logoUrl: 'https://i.ibb.co/GgN9Q1h/ORION.png' },
            { name: 'ZARION', margem: 'Margem 50k: 10 contratos WIN', logoUrl: 'https://i.ibb.co/MD7sk6Tm/ZARION.png' },
            { name: 'GIRION', margem: 'N/A', logoUrl: '' }, // Mantido para caso de uso futuro, mas sem logo e margem específica
            { name: 'OPERAÇÕES NA MÃO', margem: 'Manual', logoUrl: null }
        ];

        const ROBOTS_WITH_PARTIALS = ['ATRION WIN', 'ORION WIN']; // Robôs que podem ter entradas parciais

        fileInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (!file) return;

            // Remove a classe "initial-state" para mudar o layout
            reportWrapper.classList.remove('initial-state');
            mainContent.style.display = 'flex'; // Torna o conteúdo principal visível

            const reader = new FileReader();
            reader.onload = (e) => processDetailedCSV(e.target.result);
            reader.readAsText(file, 'windows-1252'); // Codificação comum para CSV brasileiro
        });

        // --- FUNÇÃO PRINCIPAL DE PROCESSAMENTO DO CSV ---
        function processDetailedCSV(csvText) {
            try {
                const lines = csvText.trim().split('\n');
                if (lines.length < 2) throw new Error("Arquivo CSV inválido ou vazio.");

                const headers = lines.shift().split(';').map(h => h.trim());
                const colIndices = {};
                headers.forEach((h, i) => { colIndices[h] = i; });

                // Tenta encontrar a coluna 'ROBÔ' ou 'ROBO' de forma case-insensitive e com possível variação
                const robotNameKey = Object.keys(colIndices).find(k => k.toUpperCase().includes('ROBO') || k.toUpperCase().includes('ROBÔ'));
                if (!robotNameKey) throw new Error("Coluna 'ROBÔ' ou 'ROBO' não encontrada no arquivo. Verifique o cabeçalho do CSV.");

                let rawTrades = [];
                let reportDate = '';

                lines.forEach(line => {
                    if (line.trim() === "") return; // Ignora linhas vazias
                    const values = line.split(';');

                    // Tenta extrair a data da primeira linha válida (assumindo que está na coluna 'DATA')
                    if (!reportDate && values[colIndices['DATA']]) {
                        reportDate = values[colIndices['DATA']];
                    }

                    const robotName = values[colIndices[robotNameKey]]?.trim();

                    // Processa apenas se a linha tiver um nome de robô válido
                    if (robotName) {
                        rawTrades.push({
                            robotName: robotName,
                            operacao: values[colIndices['OPERAÇÃO']] || '',
                            horaEntrada: values[colIndices['HORA ENTRADA']] || '',
                            horaSaida: values[colIndices['HORA SAÍDA']] || '',
                            precoEntrada: values[colIndices['PREÇO ENTRADA']] || '',
                            precoSaida: values[colIndices['PREÇO SAÍDA']] || '',
                            contratos: parseFloat(values[colIndices['CONTRATOS']]?.replace(',', '.') || '0'),
                            resultado: parseFloat(values[colIndices['RESULTADO']]?.replace(',', '.') || '0'),
                        });
                    }
                });

                // 1. Agrupa trades com parciais
                const processedTrades = groupTradesWithPartials(rawTrades);

                // 2. Preenche a estrutura de dados final para todos os robôs
                let reportData = {};
                ALL_ROBOTS.forEach(robot => {
                    // Cria uma entrada para cada robô, mesmo que não tenha trades no CSV
                    reportData[robot.name] = { ...robot, trades: [] };
                });

                // Adiciona os trades processados à estrutura reportData
                processedTrades.forEach(trade => {
                    if (reportData[trade.robotName]) {
                        reportData[trade.robotName].trades.push(trade);
                    } else {
                        // Se o robô não está na lista ALL_ROBOTS mas aparece no CSV, adiciona ele
                        reportData[trade.robotName] = {
                            name: trade.robotName,
                            margem: 'N/A', // Margem desconhecida para robôs não listados
                            logoUrl: null, // Sem logo definido
                            trades: [trade]
                        };
                    }
                });

                // 3. Renderiza o dashboard
                updateSidebarSummary(reportData, reportDate);
                renderCards(reportData);

            } catch (error) {
                alert(`Erro ao processar o arquivo: ${error.message}`);
                console.error(error);
                // Em caso de erro, volta ao estado inicial para permitir novo upload
                reportWrapper.classList.add('initial-state');
                mainContent.style.display = 'none';
            }
        }

        // --- FUNÇÃO PARA AGRUPAR TRADES COM PARCIAIS ---
        // Esta função identifica trades que pertencem a uma mesma operação (baseado em robô e hora de entrada)
        // e agrupa as parciais e o resultado final.
        function groupTradesWithPartials(rawTrades) {
            const finalTrades = [];
            const tradeGroups = {}; // Armazena grupos de trades: { 'NomeRobo_HoraEntrada': [trade1, trade2], ... }

            // Separa os trades: aqueles que podem ter parciais e os que não podem (simples)
            rawTrades.forEach(trade => {
                // Verifica se o robô está na lista que suporta parciais
                if (ROBOTS_WITH_PARTIALS.includes(trade.robotName)) {
                    const key = `${trade.robotName}_${trade.horaEntrada}`; // Chave única para agrupar trades da mesma entrada
                    if (!tradeGroups[key]) {
                        tradeGroups[key] = [];
                    }
                    tradeGroups[key].push(trade);
                } else {
                    finalTrades.push(trade); // Trades sem parciais são adicionados diretamente
                }
            });

            // Processa e agrega os grupos de trades com parciais
            for (const key in tradeGroups) {
                const group = tradeGroups[key];

                // Ordena os trades do grupo pela hora de saída para identificar a primeira (parcial) e a última (saída final)
                group.sort((a, b) => a.horaSaida.localeCompare(b.horaSaida));

                if (group.length === 1) {
                    // Se há apenas um trade no grupo, ele não é uma parcial, é um trade normal
                    finalTrades.push(group[0]);
                } else {
                    const firstTrade = group[0]; // O primeiro trade (menor hora de saída) é a parcial
                    const lastTrade = group[group.length - 1]; // O último trade é a saída final

                    finalTrades.push({
                        robotName: firstTrade.robotName,
                        operacao: firstTrade.operacao,
                        horaEntrada: firstTrade.horaEntrada,
                        precoEntrada: firstTrade.precoEntrada,
                        // Formata a parcial como "PREÇO(CONTRATOS)"
                        parcial: `${firstTrade.precoSaida}(${firstTrade.contratos})`,
                        precoSaida: `${lastTrade.precoSaida}(${lastTrade.contratos})`, // Mostra o preço e contratos da última saída
                        // Soma o resultado de todos os trades do grupo para obter o resultado total da operação
                        resultado: group.reduce((sum, t) => sum + t.resultado, 0)
                    });
                }
            }
            return finalTrades;
        }

        // --- ATUALIZA O SUMÁRIO NA SIDEBAR ---
        function updateSidebarSummary(reportData, reportDate) {
            const summaryContainer = document.getElementById('report-summary');
            const dateEl = document.getElementById('summary-date');
            const resultEl = document.getElementById('summary-result');
            const reportTitle = document.getElementById('report-title');

            // Formata a data para DD/MM/AAAA
            dateEl.textContent = reportDate ? reportDate.split('.').reverse().join('/') : '--/--/----';
            // Tenta aplicar a fonte Orbitron ao título principal
            reportTitle.style.fontFamily = "var(--font-family-secondary)";

            let automationTotalResult = 0;
            // Calcula o total de resultado das automações (excluindo "OPERAÇÕES NA MÃO")
            for (const robotName in reportData) {
                if (robotName !== 'OPERAÇÕES NA MÃO') {
                    reportData[robotName].trades.forEach(trade => {
                        automationTotalResult += trade.resultado;
                    });
                }
            }

            resultEl.textContent = formatCurrency(automationTotalResult);

            // Atualiza a classe CSS para definir a cor do resumo (positivo/negativo/neutro)
            summaryContainer.className = 'report-summary'; // Reseta as classes
            if (automationTotalResult > 0) summaryContainer.classList.add('positive');
            else if (automationTotalResult < 0) summaryContainer.classList.add('negative');
        }

        // --- RENDERIZA OS CARDS DE CADA ROBÔ ---
        function renderCards(data) {
            const autoContainer = document.getElementById('main-grid');
            const manualContainer = document.getElementById('manual-trades-container');
            const manualSection = document.getElementById('manual-trades-section');
            const manualTradesTitle = document.getElementById('manual-trades-title');

            // Limpa os contêineres antes de renderizar novamente
            autoContainer.innerHTML = '';
            manualContainer.innerHTML = '';
            manualSection.style.display = 'none'; // Esconde a seção manual por padrão

            let animationDelay = 0;
            // Ordena os robôs para que 'OPERAÇÕES NA MÃO' apareça por último, se existir
            const sortedRobots = Object.values(data).sort((a, b) => {
                if (a.name === 'OPERAÇÕES NA MÃO') return 1;
                if (b.name === 'OPERAÇÕES NA MÃO') return -1;
                return 0;
            });

            sortedRobots.forEach((roboData) => {
                // Incrementa o delay para criar um efeito cascata na animação
                animationDelay += 100;
                const totalResult = roboData.trades.reduce((sum, trade) => sum + trade.resultado, 0);

                // Define as classes CSS para o card com base no resultado
                let cardStateClass = 'neutral';
                let dotStateClass = 'grey'; // Ponto de status padrão
                if(roboData.trades.length > 0){ // Só define cores se houver trades
                    if (totalResult > 0) { cardStateClass = 'positive'; dotStateClass = 'green'; }
                    else if (totalResult < 0) { cardStateClass = 'negative'; dotStateClass = 'red'; }
                }

                let tradesHtml = '';
                // Cria o HTML para cada trade dentro da tabela
                if (roboData.trades.length > 0) {
                    tradesHtml = roboData.trades.map(trade => {
                        const opType = trade.operacao === 'COMPRA' ? 'C' : 'V';
                        const resultClass = trade.resultado >= 0 ? 'profit' : 'loss';
                        // Define o HTML para a coluna 'Parcial' condicionalmente
                        const partialHtml = ROBOTS_WITH_PARTIALS.includes(roboData.name) ? `<td>${trade.parcial || '-'}</td>` : '<td>-</td>'; // Se não tem parciais, mostra traço

                        return `
                            <tr>
                                <td class="op-${opType.toLowerCase()}">${opType}</td>
                                <td>${trade.precoEntrada}</td>
                                ${partialHtml}
                                <td>${trade.precoSaida}</td>
                                <td class="${resultClass}">${formatCurrency(trade.resultado)}</td>
                            </tr>`;
                    }).join('');
                } else {
                    // Mensagem para quando não há operações
                    tradesHtml = `<tr><td colspan="5" style="text-align:center; color: var(--text-secondary); padding: 2rem 0;">Nenhuma operação no dia</td></tr>`;
                }

                // Cria o HTML para a logomarca do robô, se disponível
                const logoHtml = roboData.logoUrl
                    ? `<img src="${roboData.logoUrl}" alt="${roboData.name} Logo" class="robot-logo">`
                    : '';

                // Cria o elemento do card do robô
                const card = document.createElement('div');
                card.className = `robot-card ${cardStateClass}`;
                card.style.animationDelay = `${animationDelay}ms`; // Aplica o delay da animação

                card.innerHTML = `
                    <div class="card-header">
                        <span class="status-dot ${dotStateClass}"></span>
                        <div class="title-group">
                            <h3 style="font-family: var(--font-family-secondary);">${roboData.name}</h3>
                            <p class="margem">${roboData.margem}</p>
                        </div>
                        ${logoHtml}
                    </div>
                    <div class="card-body">
                        <table class="trades-table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Entrada</th>
                                    <th>Parcial</th>
                                    <th>Saída</th>
                                    <th>Resultado</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${tradesHtml}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <span>QTD. OP: ${roboData.trades.length}</span>
                        <span class="result ${cardStateClass}">${formatCurrency(totalResult)}</span>
                    </div>`;

                // Adiciona o card ao contêiner apropriado (automação ou manual)
                if (roboData.name === 'OPERAÇÕES NA MÃO') {
                    manualContainer.appendChild(card);
                    // Se houver operações manuais, torna a seção visível
                    if (roboData.trades.length > 0) {
                        manualSection.style.display = 'flex';
                        // Tenta aplicar a fonte Orbitron ao título das operações manuais
                        manualTradesTitle.style.fontFamily = "var(--font-family-secondary)";
                    }
                } else {
                    autoContainer.appendChild(card);
                }
            });
        }
    </script>
</body>
</html>
